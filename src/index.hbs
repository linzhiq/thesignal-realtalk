into the {body} of the default.hbs template --}}

{{#is "home"}}
    {{> info-card}}
{{/is}}

{{^is "home"}}
    {{> info-card-secondary}}

    <div class="ui relaxed centered grid">
        <a class="btn bg" href="/" style="margin-bottom: 30px;">
            Back to top
        </a>
    </div>

    {{pagination}}
{{/is}}

